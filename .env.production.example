# Production Environment Variables (Minimal Cost Configuration)

# Google Cloud
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=asia-northeast1

# Vertex AI
VERTEX_AI_LOCATION=asia-northeast1
GEMINI_FLASH_MODEL=gemini-1.5-flash
GEMINI_PRO_MODEL=gemini-1.5-pro
GEMINI_API_KEY=your-gemini-api-key

# Cloud Run
PORT=8080
NODE_ENV=production

# Firestore (using default database)
FIRESTORE_DATABASE=(default)

# Redis Alternative (using memory cache for cost savings)
# REDIS_URL=redis://localhost:6379  # Commented out - using memory cache

# Security
JWT_SECRET=your-production-jwt-secret
SESSION_SECRET=your-production-session-secret

# Performance (optimized for cost)
LYRIC_GENERATION_TIMEOUT_MS=1500
COMPLIANCE_CHECK_TIMEOUT_MS=300
TTS_GENERATION_TIMEOUT_MS=200

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=30
RATE_LIMIT_WEBSOCKET_MESSAGES_PER_SECOND=5

# Features
ENABLE_VOTING=true
ENABLE_ANALYTICS=false  # Disabled to save costs
ENABLE_COMPLIANCE_CHECK=true
ENABLE_RATE_LIMITING=true

# Logging (minimal for cost savings)
LOG_LEVEL=warn
ENABLE_CLOUD_LOGGING=false
ENABLE_CLOUD_TRACE=false
ENABLE_CLOUD_PROFILER=false