# Google Cloud Configuration
GOOGLE_CLOUD_PROJECT_ID=your-project-id
GOOGLE_CLOUD_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# Vertex AI Configuration
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_ENDPOINT=
GEMINI_FLASH_MODEL=gemini-1.5-flash-latest
GEMINI_PRO_MODEL=gemini-1.5-pro-latest

# Cloud Run Configuration
CLOUD_RUN_SERVICE_NAME=rap-battle-orchestrator
CLOUD_RUN_PORT=8456
CLOUD_RUN_MAX_INSTANCES=100
CLOUD_RUN_MIN_INSTANCES=1
CLOUD_RUN_CONCURRENCY=1000

# Text-to-Speech Configuration
TTS_LANGUAGE_CODE=en-US
TTS_VOICE_NAME=en-US-Studio-M
TTS_SPEAKING_RATE=1.2
TTS_PITCH=0.0
TTS_VOLUME_GAIN_DB=0.0

# API Gateway Configuration
API_GATEWAY_URL=
WEBSOCKET_URL=

# Frontend Configuration
NEXT_PUBLIC_API_URL=http://localhost:8456
NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:8456
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=

# Security & Compliance
COMPLIANCE_THRESHOLD=0.8
CONTENT_MODERATION_API_KEY=
ALLOWED_ORIGINS=http://localhost:3456,https://yourdomain.com
JWT_SECRET=your-jwt-secret-here
SESSION_SECRET=your-session-secret-here

# Database Configuration (Firestore)
FIRESTORE_COLLECTION_BATTLES=battles
FIRESTORE_COLLECTION_USERS=users
FIRESTORE_COLLECTION_LYRICS=lyrics
FIRESTORE_COLLECTION_VOTES=votes

# Redis Configuration (for real-time data)
REDIS_URL=redis://localhost:6380
REDIS_TTL_SECONDS=3600

# Monitoring & Logging
ENABLE_CLOUD_LOGGING=true
ENABLE_CLOUD_TRACE=true
ENABLE_CLOUD_PROFILER=true
LOG_LEVEL=info

# Feature Flags
ENABLE_VOTING=true
ENABLE_ANALYTICS=true
ENABLE_COMPLIANCE_CHECK=true
ENABLE_RATE_LIMITING=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_WEBSOCKET_MESSAGES_PER_SECOND=10

# Performance Tuning
LYRIC_GENERATION_TIMEOUT_MS=1000
COMPLIANCE_CHECK_TIMEOUT_MS=300
TTS_GENERATION_TIMEOUT_MS=200
WEBSOCKET_PING_INTERVAL_MS=30000